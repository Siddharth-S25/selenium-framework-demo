<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Cross-Browser Suite" parallel="tests" thread-count="2" verbose="1">

    <!-- Chrome Tests -->
    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.automation.tests.ProductPageTest">
                <methods>
                    <include name="testCompletePurchaseWithSizeL"/>
                    <include name="testAddProductToCart"/>
                    <include name="testPageTitle"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Firefox Tests -->
    <test name="Firefox Tests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.automation.tests.ProductPageTest">
                <methods>
                    <include name="testCompletePurchaseWithSizeL"/>
                    <include name="testAddProductToCart"/>
                    <include name="testPageTitle"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
